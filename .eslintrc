{
  "plugins": [ "node" ],
  "extends": [ "eslint:recommended", "plugin:node/recommended" ],
  "env": {},
  "globals": {},
  "rules": {
	"strict": [ "error", "global" ],
    "no-irregular-whitespace": 2,
    "quotes": [
      2,
      "single"
		],
		"no-unused-vars": [
			"error",
			{ "vars": "all", "args": "none", "ignoreRestSiblings": false }
		],
		"eqeqeq": [ "error" ],
		"no-throw-literal": [ "error" ],
		"semi": [ "error", "always" ]
  },
  "overrides": [
	{
	  "files": [
	    "**/*.test.js",
	    "**/*.test.ts"
	  ],
	  "env": {
		"jest": true
	  }
	}
  ]
}
